#!/bin/bash

rm -rf build &&
cargo build --release &&
mkdir -p build/linux &&
cp target/release/2dcl build/linux &&
cp target/release/ethereum-adapter-webserver build/linux &&
cp -rf 2dcl/assets build/linux &&
cp 2dcl/config.toml build/linux &&
cd build/linux &&
tar cvzf ../2dcl-linux-0.1.0.tar.gz *
